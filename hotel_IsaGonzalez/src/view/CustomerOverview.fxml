<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerOverviewController">

    <children>

        <SplitPane dividerPositions="0.3" prefHeight="700.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <items>

                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <TableView fx:id="customerTable" prefHeight="400.0" prefWidth="175.0"
                                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

                            <columns>
                                <TableColumn fx:id="apellidos" prefWidth="150.0" text="APELLIDOS"/>
                                <TableColumn fx:id="nombre" prefWidth="150.0" text="NOMBRE"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>

                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <Label layoutX="14.0" layoutY="14.0" text="Datos del cliente:" AnchorPane.leftAnchor="20.0"
                               AnchorPane.topAnchor="20.0">
                            <font>
                                <Font size="30.0"/>
                            </font>
                        </Label>

                        <GridPane layoutX="14.0" layoutY="70.0" prefHeight="320.0" prefWidth="660.0"
                                  AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
                                  AnchorPane.topAnchor="70.0">

                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>

                            <children>
                                <Label text="DNI"/>
                                <Label fx:id="dniLabel" text="dni" GridPane.columnIndex="1"/>

                                <Label text="NOMBRE" GridPane.rowIndex="1"/>
                                <Label fx:id="nombreLabel" text="nombre" GridPane.columnIndex="1"
                                       GridPane.rowIndex="1"/>

                                <Label text="APELLIDOS" GridPane.rowIndex="2"/>
                                <Label fx:id="apellidosLabel" text="apellidos" GridPane.columnIndex="1"
                                       GridPane.rowIndex="2"/>

                                <Label text="DIRECCIÃ“N" GridPane.rowIndex="3"/>
                                <Label fx:id="direccionLabel" text="direccion" GridPane.columnIndex="1"
                                       GridPane.rowIndex="3"/>

                                <Label text="LOCALIDAD" GridPane.rowIndex="4"/>
                                <Label fx:id="localidadLabel" text="localidad" GridPane.columnIndex="1"
                                       GridPane.rowIndex="4"/>

                                <Label text="PROVINCIA" GridPane.rowIndex="5"/>
                                <Label fx:id="provinciaLabel" text="provincia" GridPane.columnIndex="1"
                                       GridPane.rowIndex="5"/>
                            </children>
                        </GridPane>
                        <HBox layoutX="254.0" layoutY="693.0" prefHeight="50.0" prefWidth="429.0"
                              AnchorPane.bottomAnchor="250.0" AnchorPane.leftAnchor="50.0"
                              AnchorPane.rightAnchor="50.0">
                            <children>
                                <Label prefHeight="43.0" prefWidth="92.0" text="Buscar DNI:">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </HBox.margin>
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="dniSearch" onKeyPressed="#showCustomerSearchedByDNI" prefHeight="40.0"
                                           prefWidth="485.0">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </HBox.margin>
                                </TextField>
                            </children>
                        </HBox>

                        <Group layoutX="57.0" layoutY="518.0" AnchorPane.bottomAnchor="60.0"
                               AnchorPane.leftAnchor="60.0" AnchorPane.rightAnchor="60.0">
                            <children>
                                <ImageView accessibleRole="BUTTON" fitHeight="140.0" fitWidth="140.0"
                                           onMouseClicked="#handleNewCustomer">
                                    <image>
                                        <Image url="@../../resources/add.png"/>
                                    </image>
                                </ImageView>
                                <ImageView accessibleRole="BUTTON" fitHeight="140.0" fitWidth="140.0" layoutX="140.0"
                                           onMouseClicked="#handleEditCustomer">
                                    <image>
                                        <Image url="@../../resources/edit.png"/>
                                    </image>
                                </ImageView>
                                <ImageView accessibleRole="BUTTON" fitHeight="140.0" fitWidth="140.0" layoutX="290.0"
                                           onMouseClicked="#handleDeleteCustomer">
                                    <image>
                                        <Image url="@../../resources/delete.jpeg"/>
                                    </image>
                                </ImageView>
                                <ImageView accessibleRole="BUTTON" fitHeight="140.0" fitWidth="140.0" layoutX="430.0"
                                           onMouseClicked="#handleBookings">
                                    <image>
                                        <Image url="@../../resources/booking.png"/>
                                    </image>
                                </ImageView>
                            </children>
                        </Group>
                    </children>
                </AnchorPane>

            </items>

        </SplitPane>
    </children>

</AnchorPane>
