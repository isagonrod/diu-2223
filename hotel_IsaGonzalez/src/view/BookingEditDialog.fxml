<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.BookingEditDialogController">
    <children>
        <GridPane layoutX="30.0" layoutY="30.0" prefHeight="150.0" prefWidth="950.0" AnchorPane.leftAnchor="30.0"
                  AnchorPane.rightAnchor="30.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Datos del cliente">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Label>
                <Label text="DNI" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="5.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="NOMBRE" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="5.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="APELLIDOS" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="5.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="DIRECCIÓN" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="5.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="LOCALIDAD" GridPane.columnIndex="2" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="5.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="PROVINCIA" GridPane.columnIndex="3" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="5.0"/>
                    </GridPane.margin>
                </Label>
                <TextField GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </GridPane.margin>
                </TextField>
                <TextField GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </GridPane.margin>
                </TextField>
                <TextField prefWidth="491.0" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </GridPane.margin>
                </TextField>
                <TextField GridPane.columnSpan="2" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </GridPane.margin>
                </TextField>
                <TextField GridPane.columnIndex="2" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </GridPane.margin>
                </TextField>
                <TextField GridPane.columnIndex="3" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </GridPane.margin>
                </TextField>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </GridPane>
        <GridPane layoutX="30.0" layoutY="180.0" prefHeight="600.0" prefWidth="940.0" AnchorPane.bottomAnchor="30.0"
                  AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Datos de la reserva">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Label>
                <Label text="Fecha de Llegada" GridPane.columnSpan="2" GridPane.rowIndex="1"/>
                <Label text="Fecha de Salida" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="1"/>
                <DatePicker fx:id="fechaLlegadaField" GridPane.columnSpan="2" GridPane.rowIndex="2"/>
                <DatePicker fx:id="fechaSalidaField" GridPane.columnIndex="2" GridPane.columnSpan="2"
                            GridPane.rowIndex="2"/>
                <Label text="Nº de habitaciones" GridPane.rowIndex="3"/>
                <Spinner fx:id="numHabitacionesField" prefHeight="31.0" prefWidth="236.0" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </GridPane.margin>
                </Spinner>
                <Label text="Tipo de habitación" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <ComboBox fx:id="tipoHabitacionField" prefHeight="31.0" prefWidth="238.0" GridPane.columnIndex="1"
                          GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </GridPane.margin>
                </ComboBox>
                <CheckBox fx:id="fumadorField" mnemonicParsing="false" text="Fumador" GridPane.columnIndex="2"
                          GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </GridPane.margin>
                </CheckBox>
                <Label cache="true" prefHeight="85.0" prefWidth="225.0"
                       text="En virtud de la ley de sanidad se informa a los clientes de que solo podrán fumar en las habitaciones reservadas para tal fin."
                       GridPane.columnIndex="2" GridPane.rowIndex="4" GridPane.rowSpan="2">
                    <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="Régimen" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
                <RadioButton mnemonicParsing="false" text="Alojamiento y desayuno" GridPane.columnIndex="3"
                             GridPane.rowIndex="4"/>
                <RadioButton mnemonicParsing="false" text="Media pensión" GridPane.columnIndex="3"
                             GridPane.rowIndex="5"/>
                <RadioButton mnemonicParsing="false" text="Pensión completa" GridPane.columnIndex="3"
                             GridPane.rowIndex="6"/>
                <ImageView accessibleRole="BUTTON" fitHeight="54.0" fitWidth="121.0" nodeOrientation="INHERIT"
                           GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.valignment="CENTER">
                    <image>
                        <Image url="@../../resources/clean.png"/>
                    </image>
                </ImageView>
                <ImageView accessibleRole="BUTTON" fitHeight="70.0" fitWidth="70.0" GridPane.columnIndex="1"
                           GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.valignment="CENTER">
                    <image>
                        <Image url="@../../resources/ok.jpg"/>
                    </image>
                </ImageView>
                <ImageView fitHeight="70.0" fitWidth="70.0" GridPane.columnIndex="2" GridPane.halignment="CENTER"
                           GridPane.rowIndex="6" GridPane.valignment="CENTER">
                    <image>
                        <Image url="@../../resources/ko.jpg"/>
                    </image>
                </ImageView>
            </children>
        </GridPane>
    </children>
</AnchorPane>
