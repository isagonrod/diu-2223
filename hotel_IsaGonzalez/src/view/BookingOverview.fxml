<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BookingOverviewController">

    <children>

        <SplitPane dividerPositions="0.3" prefHeight="700.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <items>

                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <TableView fx:id="bookingTable" prefHeight="400.0" prefWidth="175.0"
                                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

                            <columns>
                                <TableColumn fx:id="codReserva" prefWidth="150.0" text="CÓDIGO RESERVA"/>
                                <TableColumn fx:id="fechaLlegada" prefWidth="150.0" text="FECHA ENTRADA"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>

                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <Label layoutX="14.0" layoutY="14.0" text="Datos de la reserva:" AnchorPane.leftAnchor="20.0"
                               AnchorPane.topAnchor="20.0">
                            <font>
                                <Font size="30.0"/>
                            </font>
                        </Label>

                        <GridPane layoutX="14.0" layoutY="70.0" prefHeight="350.0" prefWidth="660.0"
                                  AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
                                  AnchorPane.topAnchor="70.0">

                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>

                            <children>
                                <Label text="CÓDIGO DE RESERVA"/>
                                <Label fx:id="codReservaLabel" text="codReserva" GridPane.columnIndex="1"/>

                                <Label text="FECHA DE LLEGADA" GridPane.rowIndex="1"/>
                                <Label fx:id="fechaLlegadaLabel" text="fechaLlegada" GridPane.columnIndex="1"
                                       GridPane.rowIndex="1"/>

                                <Label text="FECHA DE SALIDA" GridPane.rowIndex="2"/>
                                <Label fx:id="fechaSalidaLabel" text="fechaSalida" GridPane.columnIndex="1"
                                       GridPane.rowIndex="2"/>

                                <Label text="NÚMERO DE HABITACIONES" GridPane.rowIndex="3"/>
                                <Label fx:id="numHabitacionesLabel" text="numHabitaciones" GridPane.columnIndex="1"
                                       GridPane.rowIndex="3"/>

                                <Label text="TIPO DE HABITACIÓN" GridPane.rowIndex="4"/>
                                <Label fx:id="tipoHabitacionLabel" text="tipoHabitacion" GridPane.columnIndex="1"
                                       GridPane.rowIndex="4"/>

                                <Label text="¿PARA FUMADORES?" GridPane.rowIndex="5"/>
                                <Label fx:id="fumadorLabel" text="fumador" GridPane.columnIndex="1"
                                       GridPane.rowIndex="5"/>

                                <Label text="RÉGIMEN DE ALOJAMIENTO" GridPane.rowIndex="6"/>
                                <Label fx:id="regimenAlojamientoLabel" text="regimenAlojamiento"
                                       GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                            </children>
                        </GridPane>

                        <Group layoutX="57.0" layoutY="518.0" AnchorPane.bottomAnchor="50.0"
                               AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
                            <children>
                                <ImageView accessibleRole="BUTTON" fitHeight="140.0" fitWidth="140.0"
                                           onMouseClicked="#handleNewBooking">
                                    <image>
                                        <Image url="@../resources/img/add.png"/>
                                    </image>
                                </ImageView>
                                <ImageView accessibleRole="BUTTON" fitHeight="140.0" fitWidth="140.0" layoutX="221.0"
                                           onMouseClicked="#handleEditBooking">
                                    <image>
                                        <Image url="@../resources/img/edit.png"/>
                                    </image>
                                </ImageView>
                                <ImageView accessibleRole="BUTTON" fitHeight="140.0" fitWidth="140.0" layoutX="443.0"
                                           onMouseClicked="#handleDeleteBooking">
                                    <image>
                                        <Image url="@../resources/img/delete.jpeg"/>
                                    </image>
                                </ImageView>
                            </children>
                        </Group>
                    </children>
                </AnchorPane>

            </items>

        </SplitPane>
    </children>

</AnchorPane>
